{
    "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "./",
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "typeRoots": ["./node_modules/@types", "./types"],
    "include": ["src/**/*.ts", "src/@types/**/*.d.ts"]
  }
  